# Example environment variables

# Supabase configuration
NEXT_PUBLIC_SUPABASE_URL=https://changeme.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=changeme_supabase_anon_key

# WalletConnect project identifier
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=changeme_walletconnect_project_id

# Trezor manifest information for hardware wallet support
NEXT_PUBLIC_TREZOR_MANIFEST_EMAIL=you@example.com
NEXT_PUBLIC_TREZOR_MANIFEST_APP_URL=https://yourapp.example.com

# Etherscan API keys
NEXT_PUBLIC_ETHERSCAN_API_KEY=changeme_client_etherscan_api_key
ETHERSCAN_API_KEY=changeme_server_etherscan_api_key
NEXT_PUBLIC_LIFI_API_KEY=changeme_lifi_api_key

# Brevo email service API key (placeholder, DO NOT COMMIT REAL KEY)
BREVO_API_KEY=changeme_brevo_api_key

# CSRF protection secret
CSRF_SECRET=changeme_csrf_secret

# Donation wallet addresses
NEXT_PUBLIC_ETH_WALLET=changeme_eth_wallet_address
NEXT_PUBLIC_BITCOIN_WALLET=changeme_bitcoin_wallet_address
NEXT_PUBLIC_SOLANA_WALLET=changeme_solana_wallet_address
NEXT_PUBLIC_LITECOIN_WALLET=changeme_litecoin_wallet_address
NEXT_PUBLIC_DOGECOIN_WALLET=changeme_dogecoin_wallet_address

# Upstash Redis config (optional)
UPSTASH_REDIS_REST_URL=https://changeme_upstash_redis_url
UPSTASH_REDIS_REST_TOKEN=changeme_upstash_redis_token